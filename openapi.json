    },
    "schemas": {
      "CreateOrUpdateCategory": {
        "type": "object",
        "items": {
          "type": "object"
        },
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "Category": {
        "type": "object",
        "items": {
          "type": "object"
        },
        "properties": {
