        "security": [{ "JWT": [] }],
        "tags": ["Categories"],
        "description": "list all categories",
        "summary": "list all categories",
        "parameters": [
          {
            "required": false,
            "name": "name",
            "in": "query",
            "description": "Category Name",
            "schema": {
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          {
            "required": false,
            "name": "page",
            "in": "query",
            "description": "Category Page",
            "schema": {
              "properties": {
                "page": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all categories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Category"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "security": [{ "JWT": [] }],
        "tags": ["Categories"],
        "description": "create new category",
